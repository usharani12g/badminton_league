<h1>Players</h1>
<%= link_to 'Add Player', new_player_path %> |
<%= link_to 'Leaderboard', leaderboard_path %> |
<%= link_to 'Matches', matches_path %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Wins</th>
      <th>Losses</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |p| %>
      <tr>
        <td><%= link_to p.name, player_path(p) %></td>
        <td><%= p.winns_count || 0 %></td>
        <td><%= p.losses.count || 0 %></td>
        <td><%= link_to 'Edit', edit_player_path(p) %></td>
        <td><%= button_to 'Delete', player_path(p), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
