<h1>Leaderboard</h1>
<%= link_to 'Players', players_path %> |
<%= link_to 'Matches', matches_path %>

<table class="table">
  <thead>
    <tr>
      <th>Rank</th>
      <th>Name</th>
      <th>Wins</th>
      <th>Losses</th>
      <th>Rank %</th>
    </tr>
  </thead>
  <tbody>
    <% @players.each_with_index do |p, idx| %>
      <tr>
        <td><%= idx + 1 %></td>
        <td><%= p.name %></td>
        <td><%= p.wins_count %></td>
        <td><%= p.losses_count %></td>
        <td><%= p.rank %></td>
      </tr>
    <% end %>
  </tbody>
</table>
